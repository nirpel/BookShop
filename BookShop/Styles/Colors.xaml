<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:BookShop.View">

    <Color x:Key="DarkPrimary">#455a64</Color>
    <SolidColorBrush x:Key="DarkPrimaryBrush" Color="{StaticResource DarkPrimary}"/>

    <Color x:Key="LightPrimary">#cfd8dc</Color>
    <SolidColorBrush x:Key="LightPrimaryBrush" Color="{StaticResource LightPrimary}"/>

    <Color x:Key="Primary">#607d8b</Color>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>

    <Color x:Key="TextAndIconsColor">#ffffff</Color>
    <SolidColorBrush x:Key="TextAndIconsColorBrush" Color="{StaticResource TextAndIconsColor}"/>

    <Color x:Key="Accent">#03a9f4</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>

    <Color x:Key="PrimaryText">#212121</Color>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryText}"/>

    <Color x:Key="SecondaryText">#757575</Color>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryText}"/>

    <Color x:Key="DividerColor">#bdbdbd</Color>
    <SolidColorBrush x:Key="DividerColorBrush" Color="{StaticResource DividerColor}"/>

</ResourceDictionary>